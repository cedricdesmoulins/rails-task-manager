<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p> <%= link_to tasks_path do %>
<i class="fas fa-undo"></i>
<% end %> </p>


<p> <%= link_to "Edit this Task", edit_path(@task.id)%></p>


<p> <%= link_to destroy_path(@task.id), method: :delete, data: { confirm: "Are you sure?" } do %>
<i class="fas fa-trash-alt"></i>
<% end %>  </p>

